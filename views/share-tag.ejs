<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/pages/share-tag.css">
    <script src="/js/colorManager.js" type="module" defer></script>
</head>
<body>
    <%- include('partials/header', { currentRoute: 'share' }) %>

    <main class="container">
        <section class="tag-share">
            <form action="/tags" method="POST" class="tag-form" id="tagForm">
                <!-- Tag Name Section -->
                <div class="form-field">
                    <input type="text"
                           class="form-field__input form-field__tag-name-input"
                           id="tagName"
                           name="name"
                           maxlength="15"
                           placeholder="Tag name"
                           aria-label="Tag name"
                           autofocus
                           required>
                </div>

                <!-- Colors Section -->
                <div class="form-field">
                    <div class="form-field__header">
                        <span id="colorsLabel" class="form-field__label">Colors</span>
                        <button type="button"
                                class="color-add-btn"
                                aria-label="Add color"
                                aria-controls="colorModal">
                            <i class='bx bx-plus-circle' aria-hidden="true"></i>
                        </button>
                    </div>

                    <div class="color-container">
                        <ul class="color-list" aria-labelledby="colorsLabel">
                            <!-- Colors will be added here dynamically -->
                        </ul>
                        <input type="hidden" name="colors" id="selectedColorsInput">
                    </div>
                </div>

                <button type="submit" class="submit-btn">Share</button>
            </form>
        </section>
    </main>

    <!-- Color Selection Modal -->
    <dialog id="colorModal" class="modal" aria-labelledby="modalTitle">
        <div class="modal__content">
            <h2 class="modal__title" id="modalTitle">Select color</h2>
            <p class="modal__subtitle">Associate your tag with some colors</p>

            <div class="modal__body">
                <ul class="color-options">
                    <% colors.forEach((color) => { %>
                        <li class="color-options__item"
                            data-id="<%= color.id %>"
                            data-name="<%= color.name %>"
                            tabindex="0"
                            role="option"
                            aria-label="Select color: <%= color.name %>">
                            <div class="color-options__swatch" style="background-color: <%= color.code %>" data-code="<%= color.code %>"></div>
                            <span class="color-options__code-and-name"><%= color.code %> - <%= color.name%></span>
                        </li>
                    <% }) %>
                </ul>
                <p class="modal__empty-message">No colors available</p>
            </div>
        </div>
    </dialog>
</body>
</html>