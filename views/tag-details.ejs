<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head-boilerplate')    %>
</head>
<body>
    <%- include('partials/header', { currentRoute: 'tags' }) %>
    <main class="main spacing-top main-container">
        <section class="tag-details">
            <div class="tag-details__wrapper">
                <h2 class="tag-name"><%= tag.name %></h2>
                <div class="tag-details__actions">
                    <button class="btn btn--secondary" aria-label="Delete tag">Delete</button>
                    <button class="btn btn--primary" aria-label="Edit tag">Edit</button>
                </div>
            </div>
            <span class="creation-date">Shared at: <%= getRelativeDate(tag.created_at) %></span>
        </section>
        <section class="colors">
            <h3 class="visually-hidden">Colors in this tag</h3>
            <%- include('partials/colors-list', { colors: tag.colors }) %>
        </section>
    </main>
</body>
</html>